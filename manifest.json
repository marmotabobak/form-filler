{
  "manifest_version": 3,
  "name": "Ozon Form Filler.",
  "version": "1.0",
  "description": "Automatic form filling at Ozon and o3 websites.",
  "author": "Igor Urvantsev",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["*://forms.ozon.ru/*", "*://forms.o3.ru/*"],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://forms.ozon.ru/*", "*://forms.o3.ru/*"],
      "js": [
        "shared/field-config.js",
        "shared/utils.js",
        "shared/logger.js",
        "content/autofill.js",
        "content/form-observer.js",
        "content/init.js"
      ],
      "run_at": "document_idle",
      "icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  ],
  "action": {
    "default_popup": "popup/index.html"
  }
}
